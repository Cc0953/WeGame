<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/write_Title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/title_b1"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentEnd="true"
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/write_fristL"
        android:layout_below="@+id/write_Title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏选择"
            />
        <Spinner
            android:id="@+id/Write_choseGame"
            android:entries="@array/Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/write_secL"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/write_fristL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间选择" />
            <Spinner
                android:id="@+id/time_chose"
                android:entries="@array/Year"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </Spinner>

        </LinearLayout>
